 public class Diagonal
 {
	public static int difference(int arr[][], int n)
	{
	int d = 0, ad = 0;

     for (int i = 0; i < n; i++)
		{
			for (int j = 0; j < n; j++)
			 {
			     if (i == j)
					d+= arr[i][j];
				 if (i == n - j - 1)
					ad += arr[i][j];
		   	}
	    }
	 return Math.abs(d-ad);
	}
	public static void main(String[] args)
	{
	int n = 3;
		int arr[][] =
		{
			{10, 15, 13},
			{11, 8,   5},
			{ 9, 4,   3}
		};
	  System.out.print(difference(arr, n));

	}
}



output:
9
